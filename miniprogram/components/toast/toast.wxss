/* components/toast/toast.wxss */

.toast{
  position: fixed;
  width: 50%;
  top: 50%;
  left: 0;
  right: 0;
  margin: 0 auto;
  font-size: 26rpx;
  color: #333;
  padding: 60rpx 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  z-index: 9999999999999;
  line-height: 1.5;
  text-align: center;
}
